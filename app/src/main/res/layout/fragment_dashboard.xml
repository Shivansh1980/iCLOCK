<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/background_red5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_display"
            android:text="@string/dashboard_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/all_cards_of_dashboard"
        android:layout_width="match_parent"
        android:layout_height="433dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/event_linear_layout"
            android:layout_width="140dp"
            android:layout_height="179dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/icon_background"
            android:elevation="20sp"
            android:fadingEdgeLength="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/event_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:background="@null"
                android:contentDescription="@string/events_on_college"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/event_icon_3" />

            <TextView
                android:id="@+id/event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_button"
                android:layout_weight="2"
                android:fontFamily="@font/alfa_slab_one"
                android:text="@string/events"
                android:textAlignment="center"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sahring_linear_layout"
            android:layout_width="158dp"
            android:layout_height="183dp"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/icon_background"
            android:elevation="20sp"
            android:fadingEdgeLength="1dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/sharing_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:background="@null"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sharing_icon_2" />

            <TextView
                android:id="@+id/sharing_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="@string/dashboard_boook_text"
                android:textAlignment="center"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moodle_button_layout"
            android:layout_width="158dp"
            android:layout_height="161dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/icon_background"
            android:elevation="20sp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/moodle_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/moodle_icon" />

            <TextView
                android:id="@+id/moodle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/alfa_slab_one"
                android:paddingBottom="2sp"
                android:text="Moodle"
                android:textAlignment="center"
                android:textSize="23sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>