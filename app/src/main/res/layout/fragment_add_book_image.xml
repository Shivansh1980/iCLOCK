<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_6__7__8_plus_1"
    tools:context=".AddBookImageFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Insert Your Book Image"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/choose_file_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <ImageView
        android:id="@+id/image_after_upload"
        android:layout_width="wrap_content"
        android:layout_height="305dp"
        android:background="@android:color/holo_red_dark"
        android:backgroundTint="#6BEDC9C9"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/choose_file_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_text"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/choose_file_btn1"
        android:layout_width="178dp"
        android:layout_height="61dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:text="Choose File"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:shadowColor="#018786"
        android:text="Next"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />


</androidx.constraintlayout.widget.ConstraintLayout>