<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neww"
    tools:context=".BookDetails">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:animateLayoutChanges="false"
        android:background="@drawable/facebook_icon___copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_details_image"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="2sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="5"
                android:background="@android:drawable/screen_background_light_transparent"
                android:src="@drawable/event_card_shadow" />

            <TextView
                android:id="@+id/event_details_text_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:layout_weight="3"
                android:background="@drawable/button_invisible_background"
                android:text="Book Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="38sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_details_text_description"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginBottom="15sp"
                android:layout_weight="5"
                android:background="@android:drawable/screen_background_light_transparent"
                android:text="Description :\n"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#800505"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_details_contactno"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="10sp"
                android:layout_weight="5"
                android:background="@android:drawable/screen_background_light_transparent"
                android:gravity="start|center_vertical"
                android:text="Contact: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_details_price"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="10sp"
                android:layout_weight="5"
                android:background="@android:drawable/screen_background_light_transparent"
                android:gravity="start|center_vertical"
                android:text="Price:"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>